pipeline {
    agent any

    stages {
        stage('Compile Stage') {
            steps {
                withMaven(maven: 'Maven_Home') {   
                    sh 'start mvn clean install'   
                }
            }
        }

        stage('Test Stage') {
            steps {
                withMaven(maven: 'Maven_Home') {
                    sh 'start mvn test'   
                }
            }
        }

        stage('Cucumber Reports') {
            steps {
                cucumber buildStatus: 'UNSTABLE', 
                         jsonReportDirectory: 'target', 
                         fileIncludePattern: '**/target/cucumber.json'
            }
        }
    }
}
